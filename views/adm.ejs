  <form action="/adm" method="post" class="form create-user">
    <h2 class="form__username title">ADM username</h2>
    <input type="text" name="username" autocomplete="off" required maxlength="10"
    class="form__input-username input"> 
    <h2 class="form__password title">ADM password</h2>
    <input type="number" name="password" autocomplete="off" required minlength="8"
    class="form__input-password input"> 
    <h2 class="form__email title">ADM email</h2> 
    <input type="email" name="email" autocomplete="off" required maxlength="60"
    class="form__input-email input"> 

    <button type="button" onclick="toSubmit()" class="form__submit create-user">Create User</button>
  </form>

